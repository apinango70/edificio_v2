<h1>Apartments l2</h1>
<table>
  <thead>
    <tr>
      <th>id</th>
      <th>Number</th>
      <th>Building</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.id %></td>
        <td><%= apartment.number %></td>
        <td><%= apartment.building %></td>
        <td><%= link_to 'Mostrar', building_apartment_path(@building, apartment) %></td>
        <td><%= link_to 'Editar', edit_building_apartment_path(@building, apartment) %></td>
        <td><%= link_to 'Destroy', building_apartment_path(@building, apartment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Apartment', new_building_apartment_path(@building) %>
